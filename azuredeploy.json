{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webAppName": {
            "defaultValue": "[concat('Lead-', uniqueString(resourceGroup().id))]",
            "minLength": 2,
            "type": "String",
            "metadata": {
                "description": "Lead Web API"
            }
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "String",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "sku": {
            "defaultValue": "F1",
            "type": "String",
            "metadata": {
                "description": "The SKU of App Service Plan."
            }
        },
        "language": {
            "defaultValue": ".net",
            "type": "String"
        },
        "repoUrl": {
            "defaultValue": "https://github.com/em2websolution/Lead",
            "type": "String"
        }
    },
    "variables": {
        "appServicePlanPortalName": "[concat('AppServicePlan-', parameters('webAppName'))]",
        "gitRepoUrl": "[parameters('repoUrl')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2022-03-01",
            "name": "[variables('appServicePlanPortalName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('sku')]"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2022-03-01",
            "name": "[parameters('webAppName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]"
            ],
            "properties": {
                "siteConfig": "[parameters('language')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]"
            },
            "resources": [
                {
                    "type": "sourcecontrols",
                    "apiVersion": "2022-03-01",
                    "name": "web",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
                    ],
                    "properties": {
                        "repoUrl": "[variables('gitRepoUrl')]",
                        "branch": "master",
                        "isManualIntegration": true
                    },
                    "condition": "[contains(variables('gitRepoUrl'),'http')]"
                }
            ]
        }
    ]
}

/*
    //Criar RG
    az group create --name LeadRG --location "Brazil South"

    //Implanta o Template
    $templateFile = "azuredeploy.json"
    az deployment group create --name leadApi --resource-group LeadRG --template-file $templateFile

    //Criar profile GitAction via Visual Studio
    //Fazer push pro git

    //Link Git
    az webapp deployment source config-local-git --name webApp-emtltmrb3hpao --resource-group LeadRG
*/